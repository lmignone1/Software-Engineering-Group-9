<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane id="AnchorPane" fx:id="pane" onMouseMoved="#resizeCanvas" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="workspace.WorkspaceController">

   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <Canvas fx:id="drawingCanvas" accessibleRole="PAGE_ITEM" height="600.0" onMousePressed="#makeDraw" onScroll="#zoom" width="800.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <ToolBar prefHeight="36.0" prefWidth="800.0" BorderPane.alignment="CENTER">
              <items>
                  <MenuBar prefHeight="25.0">
                    <menus>
                      <Menu mnemonicParsing="false" text="File">
                        <items>
                              <MenuItem fx:id="newProjectMenu" mnemonicParsing="false" onAction="#newProject" text="New project" />
                          <MenuItem fx:id="loadProjectMenu" mnemonicParsing="false" onAction="#loadProject" text="Load project" />
                              <MenuItem fx:id="saveProjectMenu" mnemonicParsing="false" onAction="#saveProject" text="Save project" />
                        </items>
                      </Menu>
                        <Menu mnemonicParsing="false" text="Colour">
                           <items>
                              <MenuItem mnemonicParsing="false" text="Contour colour">
                                 <graphic>
                                    <ColorPicker fx:id="selectedContourColour">
                                       <value>
                                          <Color />
                                       </value>
                                    </ColorPicker>
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false" text="Full shape colour">
                                 <graphic>
                                    <ColorPicker fx:id="selectedFullColour" />
                                 </graphic>
                              </MenuItem>
                           </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Size">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Size X">
                                 <graphic>
                                    <TextField fx:id="sizeX" />
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false" text="Size Y">
                                 <graphic>
                                    <TextField fx:id="sizeY" />
                                 </graphic>
                              </MenuItem>
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Grid">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Grid size">
                                 <graphic>
                                    <TextField fx:id="gridSize" />
                                 </graphic></MenuItem>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button mnemonicParsing="false" onAction="#enableGrid" text="Enable grid" />
                                 </graphic>
                              </MenuItem>
                              <MenuItem mnemonicParsing="false">
                                 <graphic>
                                    <Button mnemonicParsing="false" onAction="#disableGrid" text="Disable grid" />
                                 </graphic>
                              </MenuItem>
                          </items>
                        </Menu>
                    </menus>
                  </MenuBar>
                  <HBox prefHeight="70.0" prefWidth="474.0">
                     <children>
                        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1fff99" height="29.0" onMouseClicked="#rectangle" stroke="BLACK" strokeType="INSIDE" width="53.0">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                           </HBox.margin>
                        </Rectangle>
                        <Line endX="52.69291305541992" endY="-0.41420862078666687" onMouseClicked="#lineSegment" startX="-1.0">
                           <HBox.margin>
                              <Insets bottom="10.0" right="10.0" top="30.0" />
                           </HBox.margin>
                        </Line>
                        <Ellipse fill="#ffb41f" onMouseClicked="#ellipse" radiusX="29.0" radiusY="17.0" stroke="BLACK" strokeType="INSIDE">
                           <HBox.margin>
                              <Insets right="10.0" top="15.0" />
                           </HBox.margin>
                        </Ellipse>
                      <Button mnemonicParsing="false" onAction="#undoCommand" text="Undo">
                           <HBox.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="zoom" mnemonicParsing="false" text="Zoom">
                           <HBox.margin>
                              <Insets bottom="20.0" left="10.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
              </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
